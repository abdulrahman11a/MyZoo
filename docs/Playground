        // Tab switching
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
                
                this.classList.add('active');
                const tabName = this.dataset.tab;
                document.getElementById(tabName + 'Tab').style.display = 'block';
            });
        });

        // Endpoint selection
        document.querySelectorAll('.endpoint-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.endpoint-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const method = this.dataset.method;
                const path = this.dataset.path;
                
                const methodBadge = document.getElementById('requestMethod');
                methodBadge.textContent = method;
                methodBadge.className = 'request-method method-' + method.toLowerCase();
                
                document.getElementById('requestUrl').value = 'https://api.myzoo.com' + path;
                document.getElementById('requestBody').value = '';
                document.getElementById('responseSection').style.display = 'none';
            });
        });

        // Fill sample data
        function fillSampleData() {
            const url = document.getElementById('requestUrl').value;
            const path = url.replace('https://api.myzoo.com', '');
            
            const data = sampleData[path];
            if (data) {
                document.getElementById('requestBody').value = JSON.stringify(data, null, 2);
            }
        }

        // Send request (mock)
        async function sendRequest() {
            const btn = event.target;
            btn.disabled = true;
            btn.textContent = '‚è≥ Sending...';
            
            const url = document.getElementById('requestUrl').value;
            const method = document.getElementById('requestMethod').textContent;
            const path = url.replace('https://api.myzoo.com', '');
            
            // Simulate API delay
            await new Promise(resolve => setTimeout(resolve, 800));
            
            // Get mock response
            let response = mockResponses[path] || {
                message: "This is a demo response. In production, this would call the real API.",
                success: true,
                timestamp: new Date().toISOString()
            };
            
            // If POST request, show created response
            if (method === 'POST') {
                const bodyText = document.getElementById('requestBody').value;
                if (bodyText) {
                    try {
                        const body = JSON.parse(bodyText);
                        response = {
                            success: true,
                            message: "Resource created successfully",
                            data: {
                                id: Math.floor(Math.random() * 1000),
                                ...body,
                                createdAt: new Date().toISOString()
                            }
                        };
                    } catch (e) {
                        response = {
                            success: false,
                            message: "Invalid JSON in request body",
                            error: e.message
                        };
                    }
                }
            }
            
            // Display response
            displayResponse(response, 200, 245 + Math.random() * 200);
            
            btn.disabled = false;
            btn.textContent = 'üöÄ Send Request';
        }

        // Display response
        function displayResponse(data, status, time) {
            document.getElementById('responseSection').style.display = 'block';
            
            const statusBadge = document.getElementById('statusBadge');
            statusBadge.textContent = status + ' ' + (status === 200 ? 'OK' : 'Error');
            statusBadge.className = 'status-badge ' + (status === 200 ? 'status-success' : 'status-error');
            
            document.getElementById('responseTime').textContent = `Response time: ${Math.floor(time)}ms`;
            
            const formatted = syntaxHighlight(JSON.stringify(data, null, 2));
            document.getElementById('responseBody').innerHTML = formatted;
            
            // Scroll to response
            document.getElementById('responseSection').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        // Syntax highlighting for JSON
        function syntaxHighlight(json) {
            json = json.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
            return json.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
                let cls = 'json-number';
                if (/^"/.test(match)) {
                    if (/:$/.test(match)) {
                        cls = 'json-key';
                    } else {
                        cls = 'json-string';
                    }
                } else if (/true|false/.test(match)) {
                    cls = 'json-boolean';
                } else if (/null/.test(match)) {
                    cls = 'json-null';
                }
                return '<span class="' + cls + '">' + match + '</span>';
            });
        }
    </script>
</body>
</html>
