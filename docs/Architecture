    <section class="hero">
        <h1>Architecture</h1>
        <p class="hero-description">Clean, maintainable, and scalable system design using Onion Architecture pattern</p>
    </section>

    <div class="container">
        <div class="architecture-hero">
            <h2>Onion Architecture</h2>
            <p style="color: var(--text-dim); font-size: 1.125rem; max-width: 700px; margin: 0 auto;">
                A clean architecture pattern that emphasizes separation of concerns, dependency inversion, and maintainability through layered design
            </p>
        </div>

        <!-- Visual Diagram -->
        <section class="section">
            <div class="onion-diagram">
                <div class="onion-layer layer-infrastructure">
                    <span class="layer-label">Infrastructure</span>
                </div>
                <div class="onion-layer layer-application">
                    <span class="layer-label">Application</span>
                </div>
                <div class="onion-layer layer-domain">
                    <span class="layer-label">Domain</span>
                </div>
                <div class="onion-layer layer-core">
                    <span class="layer-label">Core</span>
                </div>
            </div>
        </section>

        <!-- Layer Details -->
        <section class="section">
            <h2 class="section-title">Architecture Layers</h2>
            
            <div class="layer-details">
                <!-- Core Layer -->
                <div class="layer-card">
                    <div class="layer-card-header">
                        <div class="layer-icon layer-icon-core">ğŸ¯</div>
                        <h3>Core Layer</h3>
                    </div>
                    <p style="color: var(--text-dim); margin-bottom: 1.5rem;">
                        The innermost layer containing business entities and core business logic. This layer has no dependencies on other layers.
                    </p>
                    <h4>Contains:</h4>
                    <ul>
                        <li>Domain Entities (Patient, Vet, Appointment)</li>
                        <li>Value Objects</li>
                        <li>Domain Events</li>
                        <li>Enumerations</li>
                        <li>Core Interfaces</li>
                    </ul>
                    <div class="code-example">
                        <div class="code-title">Patient.cs</div>
                        <pre>public class Patient
{
    public int Id { get; set; }
    public string Name { get; set; }
    public string Species { get; set; }
    public DateTime DateOfBirth { get; set; }
    public string OwnerId { get; set; }
    public bool IsActive { get; set; }
    
    // Navigation Properties
    public ICollection&lt;Appointment&gt; Appointments { get; set; }
    public ICollection&lt;Prescription&gt; Prescriptions { get; set; }
}</pre>
                    </div>
                </div>

                <!-- Domain Layer -->
                <div class="layer-card">
                    <div class="layer-card-header">
                        <div class="layer-icon layer-icon-domain">âš™ï¸</div>
                        <h3>Domain Layer</h3>
                    </div>
                    <p style="color: var(--text-dim); margin-bottom: 1.5rem;">
                        Contains domain services, repository interfaces, and business rules. Depends only on the Core layer.
                    </p>
                    <h4>Contains:</h4>
                    <ul>
                        <li>Repository Interfaces (IPatientRepository)</li>
                        <li>Domain Services</li>
                        <li>Business Rules & Validations</li>
                        <li>Domain Exceptions</li>
                        <li>Specifications</li>
                    </ul>
                    <div class="code-example">
                        <div class="code-title">IPatientRepository.cs</div>
                        <pre>public interface IPatientRepository
{
    Task&lt;Patient&gt; GetByIdAsync(int id);
    Task&lt;IEnumerable&lt;Patient&gt;&gt; GetAllAsync();
    Task&lt;IEnumerable&lt;Patient&gt;&gt; GetActiveAsync();
    Task&lt;Patient&gt; AddAsync(Patient patient);
    Task UpdateAsync(Patient patient);
    Task DeleteAsync(int id);
    Task&lt;IEnumerable&lt;Patient&gt;&gt; SearchByNameAsync(string name);
}</pre>
                    </div>
                </div>

                <!-- Application Layer -->
                <div class="layer-card">
                    <div class="layer-card-header">
                        <div class="layer-icon layer-icon-application">ğŸ”§</div>
                        <h3>Application Layer</h3>
                    </div>
                    <p style="color: var(--text-dim); margin-bottom: 1.5rem;">
                        Orchestrates business logic and use cases. Contains application services, DTOs, and mappers.
                    </p>
                    <h4>Contains:</h4>
                    <ul>
                        <li>Application Services</li>
                        <li>DTOs (Data Transfer Objects)</li>
                        <li>AutoMapper Profiles</li>
                        <li>Use Case Implementations</li>
                        <li>Application Interfaces</li>
                        <li>Command & Query Handlers (CQRS)</li>
                    </ul>
                    <div class="code-example">
                        <div class="code-title">PatientService.cs</div>
                        <pre>public class PatientService : IPatientService
{
    private readonly IPatientRepository _repository;
    private readonly IMapper _mapper;
    
    public PatientService(
        IPatientRepository repository, 
        IMapper mapper)
    {
        _repository = repository;
        _mapper = mapper;
    }
    
    public async Task&lt;PatientDto&gt; CreatePatientAsync(
        CreatePatientDto dto)
    {
        var patient = _mapper.Map&lt;Patient&gt;(dto);
        var created = await _repository.AddAsync(patient);
        return _mapper.Map&lt;PatientDto&gt;(created);
    }
}</pre>
                    </div>
                </div>

                <!-- Infrastructure Layer -->
                <div class="layer-card">
                    <div class="layer-card-header">
                        <div class="layer-icon layer-icon-infrastructure">ğŸ—„ï¸</div>
                        <h3>Infrastructure Layer</h3>
                    </div>
                    <p style="color: var(--text-dim); margin-bottom: 1.5rem;">
                        The outermost layer containing implementations of interfaces defined in inner layers. Handles external concerns.
                    </p>
                    <h4>Contains:</h4>
                    <ul>
                        <li>Entity Framework DbContext</li>
                        <li>Repository Implementations</li>
                        <li>External Service Integrations</li>
                        <li>File System Access</li>
                        <li>Email Services</li>
                        <li>API Controllers</li>
                        <li>Authentication & Authorization</li>
                    </ul>
                    <div class="code-example">
                        <div class="code-title">PatientRepository.cs</div>
                        <pre>public class PatientRepository : IPatientRepository
{
    private readonly ApplicationDbContext _context;
    
    public PatientRepository(ApplicationDbContext context)
    {
        _context = context;
    }
    
    public async Task&lt;Patient&gt; GetByIdAsync(int id)
    {
        return await _context.Patients
            .Include(p => p.Appointments)
            .Include(p => p.Prescriptions)
            .FirstOrDefaultAsync(p => p.Id == id);
    }
    
    public async Task&lt;IEnumerable&lt;Patient&gt;&gt; GetActiveAsync()
    {
        return await _context.Patients
            .Where(p => p.IsActive)
            .ToListAsync();
    }
}</pre>
                    </div>
                </div>
            </div>
        </section>

        <!-- Architecture Principles -->
        <section class="section">
            <h2 class="section-title">Core Principles</h2>
            
            <div class="principles-grid">
                <div class="principle-card">
                    <div class="principle-number">01</div>
                    <h3>Dependency Inversion</h3>
                    <p style="color: var(--text-dim);">
                        Inner layers define interfaces, outer layers implement them. Dependencies point inward, never outward.
                    </p>
                </div>

                <div class="principle-card">
                    <div class="principle-number">02</div>
                    <h3>Separation of Concerns</h3>
                    <p style="color: var(--text-dim);">
                        Each layer has a specific responsibility and doesn't concern itself with the details of other layers.
                    </p>
                </div>

                <div class="principle-card">
                    <div class="principle-number">03</div>
                    <h3>Testability</h3>
                    <p style="color: var(--text-dim);">
                        Business logic is isolated from external dependencies, making unit testing straightforward and reliable.
                    </p>
                </div>

                <div class="principle-card">
                    <div class="principle-number">04</div>
                    <h3>Maintainability</h3>
                    <p style="color: var(--text-dim);">
                        Clear boundaries between layers make the codebase easier to understand, modify, and extend.
                    </p>
                </div>

                <div class="principle-card">
                    <div class="principle-number">05</div>
                    <h3>Technology Independence</h3>
                    <p style="color: var(--text-dim);">
                        Core business logic is independent of frameworks, databases, and external services.
                    </p>
                </div>

                <div class="principle-card">
                    <div class="principle-number">06</div>
                    <h3>Domain-Driven Design</h3>
                    <p style="color: var(--text-dim);">
                        Business domain is at the center, with all other concerns built around it.
                    </p>
                </div>
            </div>
        </section>

        <!-- Benefits -->
        <section class="section">
            <div class="benefits-section">
                <h2 style="text-align: center; margin-bottom: 1rem;">Benefits of Onion Architecture</h2>
                <p style="text-align: center; color: var(--text-dim); margin-bottom: 2rem;">
                    Why we chose this architecture pattern for MyZoo API
                </p>
                
                <div class="benefits-grid">
                    <div class="benefit-item">
                        <div class="benefit-icon">âœ…</div>
                        <div class="benefit-content">
                            <h4>Easy Testing</h4>
                            <p>Business logic can be tested without databases or external services</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">ğŸ”„</div>
                        <div class="benefit-content">
                            <h4>Flexible Changes</h4>
                            <p>Replace databases or frameworks without affecting business rules</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">ğŸ“š</div>
                        <div class="benefit-content">
                            <h4>Clear Structure</h4>
                            <p>Developers can quickly understand where to find or add code</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">ğŸš€</div>
                        <div class="benefit-content">
                            <h4>Scalable</h4>
                            <p>Easy to add new features without breaking existing functionality</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">ğŸ”’</div>
                        <div class="benefit-content">
                            <h4>Protected Core</h4>
                            <p>Business logic is insulated from external changes and failures</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">ğŸ‘¥</div>
                        <div class="benefit-content">
                            <h4>Team Productivity</h4>
                            <p>Multiple developers can work on different layers simultaneously</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

